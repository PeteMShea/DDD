        <relative>0</relative>
        <isnot>0</isnot>
        <arguments>
          <argument>
            <kind>1</kind>
            <string>//fade to black trigger

if fadeappeared == false
    {
        fadedelay -=1;
        if fadedelay &lt;= 0
            {
                inst = instance_create(x,y, eff_fadetoblack);
                    with(inst)
                    {
                        destroyonblack = false;
                        fadeSpeed = 2;
                    }
                fadeappeared = true        
            }
    }

if fadeappeared == true &amp;&amp; menuappeared == false
    {
        menudelay -=1;
        if menudelay &lt;= 0
            {            
                menuappeared = true        
            }        
    }

if menuappeared == true &amp;&amp; quitdone == false
{
    mx = mouse_x;
    my = mouse_y;
    
    if mx &gt;= quickrestartx1 &amp;&amp; mx &lt;= quickrestartx2 &amp;&amp; my &gt;= quickrestarty1 &amp;&amp; my &lt;= quickrestarty2 quickrestart = true else quickrestart = false;
    if mx &gt;= quitx1 &amp;&amp; mx &lt;= quitx2 &amp;&amp; my &gt;= quity1 &amp;&amp; my &lt;= quity2 quit = true else quit = false;
    
    if mouse_check_button(mb_left) &amp;&amp; quit == true 
        {
            global.reboot = true;
            script_execute(scr_savegame);
            hidden = true;
            quitdone = true;
        }

    if mouse_check_button(mb_left) &amp;&amp; quickrestart == true 
        {
            global.reboot = false;
            script_execute(scr_savegame);
            hidden = true;
            quitdone = true;                        
        }            
    
}

if quitdone = true
{
    quittimer -=1;
    if quittimer &lt;= 0
    {
        game_restart();
    }    
}



</string>
          </argument>
        </arguments>
      </action>
