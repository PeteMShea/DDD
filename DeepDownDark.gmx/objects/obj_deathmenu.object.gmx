            <string>// death menu

if hidden = false
    {
        if fadeappeared == true
        {
            draw_set_font(fnt_CapsullaBig);
            draw_set_halign(fa_center);        
            draw_set_colour(c_ltgray);
            xpos = 960;
            ypos = 360
            draw_set_alpha(alphalevel);
            
            if alphalevel &lt;= finalalpha alphalevel += alphafade;
            
            draw_text(xpos, ypos, "YOU HAVE DIED");
            
            draw_set_alpha(1);
        }
        if menuappeared == true
            {
                draw_set_font(fnt_Michroma14);
                draw_set_halign(fa_center);
                draw_set_alpha(0.85);        
                
                highlightcolour = make_colour_rgb(187, 63, 148);    
                xpos = 960;        //top left of menu text
                ypos = 500;
                
                if quickrestart == false draw_set_colour(c_ltgray) else draw_set_colour(highlightcolour)
                draw_text(xpos, ypos, "QUICK RESTART");
                
                
                ypos += 48;
                if quit == false draw_set_colour(c_ltgray) else draw_set_colour(highlightcolour)
                draw_text(xpos, ypos, "MENU");
                
                draw_set_alpha(1.0); 
            
            }
    }
</string>
